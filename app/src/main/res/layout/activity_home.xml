<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/user"
        android:layout_width="311dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        card_view:srcCompat="@drawable/user"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/aqum_two"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="@string/email"
        android:textColor="@color/darkblue"
        android:textSize="15sp"
        android:fontFamily="@font/aqum_two"
        android:textAlignment="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/homecardview"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_border"
        app:cardCornerRadius="43dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <Button
                android:id="@+id/testbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="@string/test"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/aqum_two"/>

            <Button
                android:id="@+id/seasonbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/darkblue"
                android:text="@string/seasonrec"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/aqum_two"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/lasttestcardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_border"
                app:cardCornerRadius="43dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/lasttesttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_border"
                        android:padding="15dp"
                        android:text="@string/lasttesttext"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/aqum_two"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/lasttestinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:text="Тут что-то будет"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/aqum_two"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>